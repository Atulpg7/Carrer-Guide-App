<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        tools:context=".CheckOutActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">
                    <TextView
                        android:id="@+id/Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_blue"
                        android:textSize="12sp"
                        android:text="Name :"/>
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_blue"
                        android:textSize="12sp"
                        android:layout_below="@id/Name"
                        android:layout_marginTop="10dp"
                        android:text="Price :"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/app_blue"
                        android:textSize="12sp"
                        android:text="Email :"
                        android:layout_below="@id/price"/>
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/app_blue"
                        android:textSize="12sp"
                        android:text="Email :"
                        android:layout_below="@id/price"/>

                    <TextView
                        android:id="@+id/orderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/app_blue"
                        android:textSize="12sp"
                        android:text="Order Id :"
                        android:layout_below="@id/email"/>

                    <TextView
                        android:id="@+id/statusbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/app_blue"
                        android:textSize="12sp"
                        android:text="Status :"
                        android:layout_below="@id/orderId"/>

                    <TextView
                        android:id="@+id/paid_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/app_blue"
                        android:textSize="12sp"
                        android:text="Date :"
                        android:layout_below="@id/statusbar"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/app_blue"
                        android:textSize="12sp"
                        android:text="Validate Till :"
                        android:layout_below="@id/paid_date"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="left"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:text="Rachit Gupta"/>

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:text="\u20b999 /-"/>

                        <TextView
                            android:id="@+id/payment_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:text="Rachit@careerguide.com"/>

                        <TextView
                            android:id="@+id/orderIdValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:text="#Order897624jbdkjj"/>

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:text="Success"/>


                        <TextView
                            android:id="@+id/paidon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:text="paidon"/>

                        <TextView
                            android:id="@+id/validTill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:text="validtill"/>

                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

